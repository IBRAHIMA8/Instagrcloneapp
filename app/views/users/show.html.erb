  </table>
</nav>
<header>
  <table>
    <tr>
      <td><%= image_tag "image1.jpg", size: '1300x300', class: 'fakebook-logo' %></td>
    </tr>
  </table>
</header>

<main>
  <h1>Page de Profil de <%= @user.name %></h1>
  <% if current_user.id == @user.id %>
    <p><%= link_to "Edite", edit_user_path(@user.id) %></p>
  <% end %>
  <% if @user.image.file.nil? %>
    <%= image_tag 'No_prof.jpg', class: 'profile_img' %>
    <% else %>
    <%= image_tag @user.image.url, class: 'profile_img' %>
  <% end %>
  <br><br>
  <% if current_user.id == @user.id %>
  <%= link_to "Postes Favoris", like_user_path(current_user.id) %>
    <br>
    <br>
    <%= link_to "Se deconnecter", session_path(current_user.id), method: :delete %>|
    <%= link_to 'Back', blogs_path %>
  <% end %>
</main>
